#!/bin/sh
source $CONF/base/header

# Initialize States
path_add "$HOME/.bin"
agent_auto

# Setup Shared Memory Location
TMP="$(dir_tmp)"
if [ "$TMP" != "" ]; then
    HISTFILE="$TMP/history_$(basename $SHELL)"
	export HISTFILE
	SAVEHIST="9999"
	export SAVEHIST
    echo "set viminfo+=n$TMP/viminfo" > $HOME/.vimrc.info
else
    unset HISTFILE
    SAVEHIST="0"
    export SAVEHIST
    echo "set viminfo=\"\"" > $HOME/.vimrc.info
fi

# XTERM
if [ "${TERM}" = "xterm" ]; then
	export TERM=xterm-256color
elif [ "${TERM}" = "rxvt-unicode-256color" ]; then
	export TERM=xterm-256color
	unset COLORTERM
fi

# UPDATE CMD
SUDO=$(/usr/bin/env which sudo 2>/dev/null | grep -v "not found")
if [ "$SUDO" != "" ]; then
	SUDO="${SUDO} "
fi
UN="$(uname)"
if [ "$UN" = "Linux" ]; then
	ISSUE=$(cat /etc/issue)
	if [ "$(echo "$ISSUE" | grep "Arch Linux")" != "" ]; then
		if [ "$(which aura 2>/dev/null | grep -v "not found")" != "" ]; then
			alias aura="$SUDO"'aura'
			alias update='aura -Syu; aura -Aku'
			alias inst='aura -S'
			alias aur='aura -Aa'
		else
			alias pacman="$SUDO"'pacman'
			alias update='pacman -Syu'
			alias inst='pacman -S'
		fi
		alias clean='if [ "$(pacman -Qqdt)" != "" ]; then; sudo pacman -Rns $(pacman -Qqdt); fi'
		alias del="$SUDO"'pacman -Rsdc'
    elif [ "$(echo "$ISSUE" | grep -e "\(Debian\|Ubuntu\)")" != "" ]; then
		alias apt-get="$SUDO"'apt-get'
		alias update='apt-get update; apt-get dist-upgrade'
		alias inst='apt-get install'
		alias del='apt-get purge'
	fi
elif [ "$UN" = "FreeBSD" ]; then
	alias portsnap="$SUDO"'portsnap'
	if [ "$(which portmaster 2>/dev/null | grep -v "not found")" != "" ]; then
		alias portmaster="$SUDO"'portmaster'
		alias inst='portmaster -yBd'
		alias update='portsnap fetch; portsnap update; portmaster -aByd'
		alias del='portmaster -e'
	else
		alias update='portsnap fetch; portsnap update'
	fi
elif [ "$UN" = "SunOS" ]; then
	alias pkg="$SUDO"'pkg'
	alias update='pkg update'
	alias inst='pkg install'
fi

# Sprunge
alias sprunge="curl -F 'sprunge=<-' http://sprunge.us"

# ROOT
alias root="${SUDO}su -"

# Battery
alias bat='echo "$(B="$(cat /sys/class/power_supply/BAT*/status)"; ([[ "$B" == "Charging" ]] && echo "↑") || ([[ "$B" == "Discharging" ]] && echo "↓") || echo "⚡")$(expr $(cat /sys/class/power_supply/BAT*/charge_now) \* 100 / $(cat /sys/class/power_supply/BAT*/charge_full))%"'
alias t='ls /sys/class/power_supply 2>/dev/null | grep BAT >/dev/null 2>/dev/null; [[ "$?" = "0" ]] && echo "$(bat) $(date)" || echo "$(date)"'

# FreeBSD Vars
EDITOR="vim"
export EDITOR
PAGER="less"
export PAGER
BLOCKSIZE="K"
export BLOCKSIZE

# Add Cabal to path
PATH="$PATH:$HOME/.cabal/bin"

# Git Pull All and Submodules
alias gpa="git pull origin master; git submodule foreach --recursive \"(git checkout master; git pull origin master)&\""
