name = EAP-TTLS
author = William Kennington
version = 1
require username *Username password *Password ca_cert *Path_to_CA_Cert
-----
ctrl_interface=/var/run/wpa_supplicant
network={
   ssid="$_ESSID"
   key_mgmt=WPA-EAP
   pairwise=CCMP
   group=CCMP
   eap=TTLS
   identity="$_USERNAME"
   password="$_PASSWORD"
   ca_cert="$_CA_CERT"
   phase2="auth=MSCHAPV2"
}
