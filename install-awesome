#!/usr/bin/env zsh
FILE="$(readlink -f "$0")"
DIR="$(dirname "$FILE")/awesome"
rm -rf "$HOME"/.{xinitrc,xmonad,Xdefaults,gtkrc-2.0,config/{awesome{/rc.lua,},sakura,gtk-3.0,Terminal,wallpaper,uzbl}}
install -dv ~/.config
#ln -sv $DIR/gtkrc-2.0 ~/.gtkrc-2.0
ln -s $DIR/xinitrc ~/.xinitrc
ln -s $DIR/awesome ~/.config/awesome
if [ "$(/usr/bin/env which sudo 2>/dev/null | grep -v "not found")" = "" ]; then
    if [ "$(awesome --version | grep v3.5)" != "" ]; then
        ln -s $DIR/awesome/rc.35.lua $DIR/awesome/rc.lua
    else
        ln -s $DIR/awesome/rc.34.lua $DIR/awesome/rc.lua
    fi
fi
ln -s $DIR/Terminal ~/.config/Terminal
ln -s $DIR/wallpaper ~/.config/wallpaper
ln -s $DIR/uzbl ~/.config/uzbl
#ln -sv $DIR/sakura ~/.config/sakura
#ln -sv $DIR/gtk-3.0 ~/.config/gtk-3.0
#ln -sv $DIR/Xdefaults ~/.Xdefaults
ln -s $DIR/xmonad ~/.xmonad
